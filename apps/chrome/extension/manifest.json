{
  "manifest_version": 3,
  "name": "Harmony UI Editor",
  "version": "1.18",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "host_permissions": ["https://neutral-mink-38.accounts.dev/*"]
}
