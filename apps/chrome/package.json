{
  "name": "chrome",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "scripts": {
    "withenv": "dotenv -e ../../.env --",
    "build": "rm -rf extension/dist &&  NODE_ENV=production pnpm withenv webpack",
    "build:popup": "NODE_ENV=production pnpm withenv webpack --config webpack.config.popup.js",
    "dev": "rm -rf extension/dist && NODE_ENV=development pnpm withenv webpack --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" && eslint --fix .",
    "lint": "pnpm withenv eslint ."
  },
  "files": [
    "dist"
  ],
  "preferUnplugged": true,
  "dependencies": {
    "@clerk/chrome-extension": "^2.1.15",
    "@clerk/clerk-js": "^5.45.2",
    "@clerk/clerk-react": "^5.22.2",
    "@harmony/ui": "workspace:*",
    "@harmony/util": "workspace:*",
    "harmony-ai-editor": "workspace:*",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@harmony/eslint-config-custom": "workspace:^",
    "@harmony/prettier-config": "workspace:^",
    "@harmony/tailwind-config": "workspace:^",
    "@harmony/tsconfig": "workspace:^",
    "@types/chrome": "^0.0.297",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "postcss": "^8.5.1",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.4.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-patch": "^5.0.2",
    "ts-loader": "^9.5.2",
    "typescript": "5.7.3",
    "unplugin-tailwindcss-mangle": "^4.0.2",
    "vitest": "^3.0.2",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "prettier": "@harmony/prettier-config"
}
