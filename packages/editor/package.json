{
  "name": "harmony-ai-editor",
  "description": "Front-end overlay ontop of your webapp",
  "main": "./dist/setup/bundle.js",
  "module": "./dist/setup/bundle.js",
  "types": "./dist/esm/editor/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "withenv": "dotenv -e ../../.env --",
    "prepublish": "pnpm run build",
    "build": "npm run build:editor && cp ./dist/editor/bundle.js ./public/bundle.js && pnpm run build-webpack",
    "dev": "NODE_ENV=development pnpm withenv tsx watch ./src/server.ts",
    "build:setup:editor": "pnpm run build:editor && pnpm run build:setup",
    "build:setup": "NODE_ENV=production webpack --mode=production --config ./webpack.config.setup.js",
    "build:editor": "NODE_ENV=production webpack --mode=production --config ./webpack.config.editor.js",
    "dev-webpack": "NODE_ENV=development pnpm withenv webpack --config ./webpack.config.dev.js && cp ./dev/bundle.js ./public/bundle.js",
    "build-webpack": "NODE_ENV=production webpack --mode=production --config ./webpack.config.server.js",
    "build:rollup": "rollup -c",
    "build:esm": "tsc && tsc-alias",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && tsc-alias",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" && eslint --fix ."
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.2",
    "@harmony/db": "workspace:*",
    "@harmony/server": "workspace:*",
    "@harmony/ui": "workspace:*",
    "@harmony/util": "workspace:*",
    "@headlessui/react": "^1.7.18",
    "@syncfusion/ej2-base": "^25.2.5",
    "@syncfusion/ej2-buttons": "^25.2.4",
    "@syncfusion/ej2-inputs": "^25.2.5",
    "@syncfusion/ej2-react-navigations": "^25.2.4",
    "@trpc/client": "^10.45.0",
    "@trpc/server": "^10.45.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^7.3.0",
    "express": "^4.19.2",
    "hotkeys-js": "^3.13.2",
    "interactjs": "^1.10.26",
    "jquery": "^3.7.1",
    "morgan": "^1.10.0",
    "react": "^18",
    "react-dom": "^18",
    "react-reconciler": "^0.29.0",
    "superjson": "^2.2.1",
    "tsc-alias": "^1.8.8",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.7.18",
    "dayjs": "^1.11.10",
    "hotkeys-js": "^3.13.2",
    "react": "^18",
    "react-dom": "^18",
    "react-reconciler": "^0.29.0",
    "tsc-alias": "^1.8.8",
    "zod": "^3.22.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-react": "^7.23.3",
    "@harmony/eslint-config-custom": "workspace:*",
    "@harmony/prettier-config": "workspace:^",
    "@harmony/tailwind-config": "workspace:^",
    "@harmony/tsconfig": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jquery": "^3.5.29",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-reconciler": "^0.28.8",
    "@types/uuid": "^9.0.8",
    "@types/webpack-env": "^1.18.5",
    "@types/webpack-hot-middleware": "^2.25.9",
    "css-loader": "^6.9.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "jsdom": "^24.0.0",
    "postcss": "^8",
    "postcss-loader": "^8.0.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.1",
    "ts-loader": "^9.5.1",
    "tsup": "^8.0.2",
    "tsx": "^4.7.3",
    "typescript": "^5",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^7.2.1",
    "webpack-hot-middleware": "^2.26.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@harmony/eslint-config-custom/library"
    ]
  },
  "prettier": "@harmony/prettier-config",
  "version": "0.12.8"
}
