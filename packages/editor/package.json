{
  "name": "harmony-ai-editor",
  "description": "Front-end overlay ontop of your webapp",
  "main": "./dist/setup/bundle.js",
  "module": "./dist/setup/bundle.js",
  "types": "./dist/esm/packages/editor/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "withenv": "dotenv -e ../../.env --",
    "prepublish": "pnpm run build",
    "build": "npm run build:editor && cp ./dist/editor/bundle.js ./public/bundle.js && pnpm run build-webpack",
    "dev": "NODE_ENV=development pnpm withenv tsx watch ./src/server.ts",
    "build:setup:editor": "pnpm run build:editor && pnpm run build:setup",
    "build:setup": "NODE_ENV=production ENV=production webpack --mode=production --config ./webpack.config.setup.js",
    "build:editor": "NODE_ENV=production webpack --mode=production --config ./webpack.config.editor.js",
    "dev-webpack": "NODE_ENV=development pnpm withenv webpack --config ./webpack.config.dev.js && cp ./dev/bundle.js ./public/bundle.js",
    "build-webpack": "NODE_ENV=production webpack --mode=production --config ./webpack.config.server.js",
    "build:rollup": "rollup -c",
    "build:esm": "tsc && tsc-alias",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs && tsc-alias",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\" && eslint --fix .",
    "lint": "pnpm withenv eslint ."
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.22.2",
    "@clerk/clerk-sdk-node": "^5.1.6",
    "@harmony/db": "workspace:*",
    "@harmony/server": "workspace:*",
    "@harmony/ui": "workspace:*",
    "@harmony/util": "workspace:*",
    "@headlessui/react": "^2.2.0",
    "@syncfusion/ej2-base": "^28.1.33",
    "@syncfusion/ej2-buttons": "^28.1.39",
    "@syncfusion/ej2-inputs": "^28.1.37",
    "@syncfusion/ej2-react-navigations": "^28.1.39",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv-cli": "^8.0.0",
    "express": "^4.21.2",
    "framer-motion": "^11.18.1",
    "hotkeys-js": "^3.13.9",
    "interactjs": "^1.10.27",
    "jquery": "^3.7.1",
    "morgan": "^1.10.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-reconciler": "^0.31.0",
    "superjson": "^2.2.2",
    "tailwindcss-patch": "^5.0.2",
    "tsc-alias": "^1.8.10",
    "unplugin-tailwindcss-mangle": "^4.0.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1",
    "zustand": "^5.0.3"
  },
  "peerDependencies": {
    "@headlessui/react": "^1.7.18",
    "dayjs": "^1.11.10",
    "hotkeys-js": "^3.13.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-reconciler": "^0.29.0",
    "tsc-alias": "^1.8.8",
    "zod": "^3.22.4"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@harmony/eslint-config-custom": "workspace:*",
    "@harmony/prettier-config": "workspace:^",
    "@harmony/tailwind-config": "workspace:^",
    "@harmony/tsconfig": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jquery": "^3.5.32",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@types/react-reconciler": "^0.28.9",
    "@types/uuid": "^10.0.0",
    "@types/webpack-env": "^1.18.5",
    "@types/webpack-hot-middleware": "^2.25.9",
    "css-loader": "^7.1.2",
    "eslint": "^9.18.0",
    "eslint-config-next": "15.1.5",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.4.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "5.7.3",
    "webpack": "5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-middleware": "^7.4.2",
    "webpack-hot-middleware": "^2.26.1"
  },
  "prettier": "@harmony/prettier-config",
  "version": "0.13.3"
}
