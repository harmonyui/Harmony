{
  "extends": "@harmony/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2021"],
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vscode"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 